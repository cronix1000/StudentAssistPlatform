@{
    ViewData["Title"] = "SignUp";
}

<style>
    :root {
        --primary-blue: #1a237e;
        --light-purple: #f3f4ff;
        --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #FFF8E2;
    }

    .container {
        text-align: center;
    }

    .navbar {
        background: var(--primary-blue);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
    }

    h3 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    h4 {
        font-family: "Anonymous Pro";
        font-size: 50px;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        width: 400px;
        margin: 0 auto;
    }

    input, select {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
        background-color: #fdfdfd;
        appearance: none; /* Removes the default browser styling */
        /*background-image: linear-gradient(45deg, transparent 50%, #8a2be2 50%), linear-gradient(135deg, #8a2be2 50%, transparent 50%);*/
        background-position: calc(100% - 1rem) calc(1rem), calc(100% - 1rem) calc(1rem);
        background: #fdfdfd url("data:image/svg+xml;charset=US-ASCII,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3E%3Cpath fill='%238a2be2' d='M2 0L0 2h4z'/%3E%3C/svg%3E") no-repeat right 1rem center;
        background-size: 5px 5px, 5px 5px;
        background-repeat: no-repeat;
        cursor: pointer;
    }

        select::-ms-expand {
            display: none; /* Remove dropdown arrow for IE/Edge */
        }

        input:focus, select:focus {
            outline: none;
            border-color: #8a2be2;
            box-shadow: 0 0 5px rgba(138, 43, 226, 0.5);
        }

    button {
        background-color: #8a2be2;
        color: #fff;
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #6c1bb5;
        }

    form ul li {
        font-size: x-small;
        list-style: disc inside;
        text-align: left;
    }

    label {
        display: block;
        color: black;
        font-size: small;
    }

    span {
        color: purple;
    }

    .lab1 {
        font-size: 20px;
    }
</style>

<div class="container">
    <h3>Hello, <span>@ViewBag.Name</span></h3>
    <h4>Specific Help Request</h4>
    <form asp-controller="Calender" asp-action="Calender" method="POST" enctype="multipart/form-data">

        <label class="lab1" for="helpfor">What do you need help studying for?</label>
        @*<input type="text" id="helpfor" name="helpfor" placeholder="Type here" required />*@
        <select id="helpfor" name="helpfor" required>
            <option value="Exam / Test">Exam / Test</option>
            <option value="Entire Course">Entire Course</option>
            <option value="Learning Specific Material">Learning Speciic Material</option>
        </select>
        <label class="lab1" for="weeks">How many weeks are you into the course</label>
        <input type="number" id="weeks" name="weeks" placeholder="Type here" required />

        <label class="lab1" for="subject">Subject</label>
        <input type="text" id="subject" name="subject" placeholder="Type here" required />

        <label class="lab1" for="timeleft">In how many days will you have your exam?</label>
        <input type="number" id="timeleft" name="timeleft" placeholder="Type Here" required />

        <button type="submit">Sign Up</button>
    </form>
</div>